<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginTop="10dp"
    android:fitsSystemWindows="true"

    android:layout_height="match_parent"
    tools:context=".DetailActivity">

    <ImageView
        android:id="@+id/imageTweet"
        android:layout_width="50dp"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="5dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"

        android:layout_marginStart="4dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/imageTweet"
        android:text="TextView" />

    <TextView
        android:id="@+id/userName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Name"
        android:layout_marginStart="4dp"

        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/imageTweet"
        android:text="TextView" />

    <TextView
        android:id="@+id/body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageTweet"
        android:layout_alignParentStart="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="15dp"
        android:text="TextView" />


    <ImageView
        android:id="@+id/comment"
        android:layout_marginStart="90dp"

        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="15dp"

        android:layout_below="@+id/body"

        app:srcCompat="@drawable/comment_outline" />

    <ImageView
        android:id="@+id/reply"

        android:layout_marginStart="90dp"

        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@+id/comment"

        android:layout_below="@+id/body"

        app:srcCompat="@drawable/repeat_variant" />

    <ImageView
        android:id="@+id/heart"
        android:layout_marginStart="90dp"

        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@+id/reply"

        android:layout_below="@+id/body"

        app:srcCompat="@drawable/heart_outline" />

    <ImageView
        android:id="@+id/share"
        android:layout_marginStart="90dp"

        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@+id/heart"

        android:layout_below="@+id/body"

        app:srcCompat="@drawable/share_variant_outline" />

    <View
        android:id="@+id/divider"

        android:layout_marginTop="30dp"

        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/heart"
        android:layout_alignParentStart="true"

        android:layout_centerVertical="true"

        android:background="?android:attr/listDivider" />


</RelativeLayout>